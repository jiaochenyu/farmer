<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2"
    tools:context="com.example.farmer.fragment.my_account_set.MyAccountSetActivity">
    <!--顶部标题-->
    <RelativeLayout
        android:id="@+id/usertitle"
        style="@style/pagetitle">
        <ImageView
            android:id="@+id/my_set_back"
            android:layout_marginLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/my_ic_brows_back"/>
        <TextView
            style="@style/pagetitletext"
            android:text="账号设置"
            />

    </RelativeLayout>

    <!-- 内容 -->
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/usersetcontent"
        style="@style/pagecontent">
        <!--头像设置-->
        <LinearLayout
            android:id="@+id/my_set_photo"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:text="头像"
                android:textSize="15sp"
                android:textColor="#d6d3d3"
                android:gravity="center_vertical"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/user_photo"
                android:layout_weight="3"
                android:src="@drawable/user_default"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_weight="1"
                android:src="@drawable/my_indicator_right"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <!--手机号-->
        <LinearLayout
            android:background="@drawable/my_border2"
            android:id="@+id/my_set_phone"
            style="@style/my_person_linear">
            <TextView
                android:id="@+id/my_set_phone_text1"
                android:text="手机号(用户名)"
                style="@style/my_person_set_text1"/>
            <TextView
                android:id="@+id/my_set_phone_text2"
                android:text="155******72"
                style="@style/my_person_set_text2"/>
            <ImageView
                android:id="@+id/my_set_phone_image"
                android:src="@drawable/my_indicator_right"
                style="@style/my_person_set_image"/>

        </LinearLayout>

        <!--昵称-->
        <LinearLayout
            android:id="@+id/my_set_nick"
            style="@style/my_person_linear">
            <TextView
                android:id="@+id/my_set_nick_text1"
                android:text="昵称"
                style="@style/my_person_set_text1"/>
            <TextView
                android:id="@+id/my_set_nick_text2"
                android:text="妈妈叫我去买菜"
                style="@style/my_person_set_text2"/>
            <ImageView
                android:id="@+id/my_set_nick_image"
                android:src="@drawable/my_indicator_right"
                style="@style/my_person_set_image"/>

        </LinearLayout>

        <!--性别-->
        <LinearLayout
            android:background="@drawable/my_border2"
            android:id="@+id/my_set_sex"
            style="@style/my_person_linear">
            <TextView
                android:id="@+id/my_set_sex_text1"
                android:text="性别"
                style="@style/my_person_set_text1"/>
            <TextView
                android:id="@+id/my_set_sex_text2"
                android:text="男"
                style="@style/my_person_set_text2"/>
            <ImageView
                android:id="@+id/my_set_sex_image"
                android:src="@drawable/my_indicator_right"
                style="@style/my_person_set_image"/>

        </LinearLayout>

        <!--出生日期-->
        <LinearLayout
            android:id="@+id/my_set_birth"
            style="@style/my_person_linear">
            <TextView
                android:id="@+id/my_set_birth_text1"
                android:text="出生日期"
                style="@style/my_person_set_text1"/>
            <TextView
                android:id="@+id/my_set_birth_text2"
                android:text="2000-09-09"
                style="@style/my_person_set_text2"/>
            <ImageView
                android:id="@+id/my_set_birth_image"
                android:src="@drawable/my_indicator_right"
                style="@style/my_person_set_image"/>

        </LinearLayout>

        <!--职业-->
        <LinearLayout
            android:background="@drawable/my_border2"
            android:id="@+id/my_set_job"
            style="@style/my_person_linear">
            <TextView
                android:id="@+id/my_set_job_text1"
                android:text="职业"
                style="@style/my_person_set_text1"/>
            <TextView
                android:id="@+id/my_set_job_text2"
                android:text="学生"
                style="@style/my_person_set_text2"/>
            <ImageView
                android:id="@+id/my_set_job_image"
                android:src="@drawable/my_indicator_right"
                style="@style/my_person_set_image"/>

        </LinearLayout>

        <!--家庭成员-->
        <LinearLayout
            android:id="@+id/my_set_family"
            style="@style/my_person_linear">
            <TextView
                android:id="@+id/my_set_family_text1"
                android:text="家庭成员"
                style="@style/my_person_set_text1"/>
            <TextView
                android:id="@+id/my_set_famliy_text2"
                android:text="4人"
                style="@style/my_person_set_text2"/>
            <ImageView
                android:id="@+id/my_set_family_image"
                android:src="@drawable/my_indicator_right"
                style="@style/my_person_set_image"/>

        </LinearLayout>

        <!--登录密码-->
        <LinearLayout
            android:background="@drawable/my_border2"
            android:id="@+id/my_set_password"
            style="@style/my_person_linear">
            <TextView
                android:id="@+id/my_set_password_text1"
                android:text="修改登录密码"
                style="@style/my_person_set_text1"/>
            <TextView
                style="@style/my_person_set_text2"/>
            <ImageView
                android:id="@+id/my_set_password_image"
                android:src="@drawable/my_indicator_right"
                style="@style/my_person_set_image"/>

        </LinearLayout>

        <!--退出当前账号-->
        <LinearLayout
            android:background="@drawable/my_border2"
            android:id="@+id/my_set_account"
            style="@style/my_person_linear">
            <TextView
                android:id="@+id/my_set_account_text"
                android:text="退出当前账号"
                android:textColor="#ec3131"
                android:gravity="center"
                style="@style/my_person_set_text1"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="4"
            android:id="@+id/my_set_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>





        </LinearLayout>



</LinearLayout>
