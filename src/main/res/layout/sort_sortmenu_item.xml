<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sort_sort_item_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/android" />

    <ImageView
        android:id="@+id/sort_sort_item_carimageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/sort_sort_item_imageview"
        android:src="@drawable/car" />

    <TextView
        android:id="@+id/sort_sort_item_nametextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sort_sort_item_carimageview"
        android:text="苹果" />

    <TextView
        android:id="@+id/sort_sort_item_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sort_sort_item_nametextview"
        android:text="￥" />

    <TextView
        android:id="@+id/sort_sort_item_pricetextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sort_sort_item_nametextview"
        android:layout_toRightOf="@id/sort_sort_item_remark"
        android:text="3.4" />

    <TextView
        android:id="@+id/sort_sort_item_unittextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sort_sort_item_nametextview"
        android:layout_alignParentRight="true"
        android:text="3.4/500g" />

</RelativeLayout>